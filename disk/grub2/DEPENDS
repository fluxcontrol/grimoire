depends  automake  &&
depends  bison     &&
depends  flex      &&
depends  gettext   &&
depends  gnupg     &&
depends  smgl-fhs  &&

if [[ "${GRUB2_SVN}" = 'y' ]]; then
  depends autoconf &&
  depends subversion &&
  depends RUBY
fi  &&

optional_depends  lvm \
                  '--enable-device-mapper'   \
                  '--disable-device-mapper'  \
                  'device Mapper/ RAID support' &&

optional_depends  freetype2                  \
                  '--enable-grub-mkfont'     \
                  '--disable-grub-mkfont'    \
                  'for grub-mkfont utility' &&

optional_depends  unifont  '' '' 'for the default font (needed for gfxterm)' &&

optional_depends  LIBUSB \
                  '--enable-grub-emu-usb'  \
                  '--disable-grub-emu-usb' \
                  'build grub-emu debugging utility' && 

optional_depends  sdl \
                  '--enable-grub-emu-sdl' \
                  '--disable-grub-emu-sdl' \
                  'To build and install the grub-emu debugging utility with SDL support'
